<div class="container">
  <h1><%= t (".title") %></h1>

  <%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>

  <%= form_with url: passwords_path, class: "form" do |form| %>
    <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: t(".email"), value: params[:email_address] %><br>
    <%= form.submit t(".submit") %>
  <% end %>
</div>
